<h1>My Portfolio</h1>

<div class="search-area">

  <h3>Search stocks</h3>
  <%= form_tag search_stock_path, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9">
        <%= text_field_tag :stock, params[:stock],
                           placeholder: "Stock ticker", autofocus: true,
                           class: "form-control form-control-large" %>
      </div>
      <div class="col-sm-3 no-padding-h">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <% fa_icon 'search' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<% if @stock != nil %>
  <div class="col-sm-12">
  <div class="card card-header card-result">
    <span><strong>Ticker: </strong><%= @stock.ticker %></span>
    <span><strong>Name: </strong><%= @stock.name %></span>
    <span><strong>Price: </strong><%= @stock.last_price %></span>
  </div>
  </div>
<% end %>
