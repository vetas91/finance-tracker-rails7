<table class="table table-hover">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Email</th>
    <th scope="col">First name</th>
    <th scope="col">Last name</th>
  </tr>
  </thead>
  <tbody>
  <% @tracked_friends.each_with_index do |user, index| %>
    <tr>
      <th scope="row"><%= index + 1 %></th>
      <td><%= user.email %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td>
        <%= link_to "View", user_path(user), class: "badge bg-secondary" %>
        <%= link_to "Remove", friendship_path(user), class: "badge bg-secondary",
                      data: { "turbo-method": :delete, turbo_confirm: "are you sure to remove from favorite?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>