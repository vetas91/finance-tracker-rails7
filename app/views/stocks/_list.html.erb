<table class="table table-hover">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Ticker</th>
    <th scope="col">Name</th>
    <th scope="col">Price</th>
    <th scope="col">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @tracked_stocks.each_with_index do |stock, index| %>
    <tr>
      <th scope="row"><%= index + 1 %></th>
      <td><%= stock.ticker %></td>
      <td><%= stock.name %></td>
      <td><%= stock.last_price.nil? ? '-' : stock.last_price %></td>
      <td><%= link_to "Remove", user_stock_path(stock), class: "btn btn-secondary",
                      data: { "turbo-method": :delete, turbo_confirm: "are you sure to remove from favorite?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>